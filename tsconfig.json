{
  "exclude": [ "node_modules" ],
  "ts-node": {
    "files": true,
    "compilerOptions": { }
  },
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": [ "./src/*" ]
    },
    "rootDirs": [
      "./src/"
    ],
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  }
}
